<GridLayout
        xmlns:builtin="http://github.com/orfby/ui/api/schema"
        width="match_content"
        builtin:height="match_parent"
        builtin:gravity="right"
        builtin:columns="2"
        builtin:background="images/scalebkg-50px.png"
        builtin:bkg-scale="tiled">
    <Image
            builtin:width="100px"
            builtin:height="100px"
            builtin:gravity="center"
            builtin:background="#00000055"
            builtin:source="images/frog2.png"
            builtin:scale="fill"/>
    <TextButton
            builtin:width="100px"
            builtin:height="50px"
            builtin:gravity="center"
            builtin:background="#FF0000"
            builtin:bkg-hovered="#FFFF00"
            builtin:bkg-pressed="#00FF00"
            builtin:text="button"
            builtin:text-size="24"
            builtin:press-callback="testcallback"/>
    <ImageButton
            builtin:width="100px"
            builtin:height="100px"
            builtin:gravity="center"
            builtin:background="#FF0000"
            builtin:bkg-hovered="#FFFF00"
            builtin:bkg-pressed="#00FF00"
            builtin:source="images/frog.png"
            builtin:press-callback="testcallback"/>
</GridLayout>